<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <Button
        android:id="@+id/log_out_button_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button1"
        android:layout_marginBottom="21dp"
        android:text="Log Out" />

    <fragment
        android:id="@+id/fragment1"
        android:name="com.Cory.gigbag.User_info_List_Fragment"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
       	android:layout_marginTop="30dp"
       	android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/log_out_button_user_info"
        android:layout_alignLeft="@+id/fragment1"
        android:layout_alignRight="@+id/fragment1"
        android:text="Add Band Info" />

</RelativeLayout>
